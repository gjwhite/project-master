{% extends "layouts/default.twig" %}
{% from '../components/tag-group.twig' import tagGroup %}
{% from '../components/field.twig' import field %}
{% block content %}
    <!-- =============== Block Main Top =============== -->
    {% include 'blocks/block-main-top.twig' %}
    <div class="container">

        {# {% include '../components/cards.twig' %} #}

    <section class="section section--centered">

        {{ field({
            title: 'Name',
            helper: 'this is a name field',
            input: [
                {
                    type: 'text',
                    name: 'name',
                    label: 'First name(s)*',
                    value: ''
                }
            ],
            validation: 'Please enter you√Üre name'
        }) }}

    </section>


        <section class="section section--centered">

            {{
                tagGroup({
                    title: 'My tag group',
                    tag: [
                        {
                            text: 'Tag 1',
                            variant: [
                                'rounded',
                                'alternate'
                            ],
                            extraClasses: [
                                'u-class'
                            ]
                        },
                        {
                            text: 'Tag 2'
                        }
                    ]
                })
            }}

        <section>

        {% import '../_macros/components.twig' as components %}

        {% for video in videos %}
            {{ components.video({
                id: '123',
                title: 'video title',
                image: 'image',
                textOnVideo: true,
                classes: [
                    'o-video--large',
                    'u-align-left'
                ]
            }) }}
        {% endfor %}

        <div class="tag-group">
                {{ components.tag({
                    text: 'Tag',
                    variant:'c-tag--primary',
                    extraClasses: [
                        'one',
                        'two'
                    ]
                }) }}
        </div>

    </div>
    <!-- =============== Block Main Bottom =============== -->
    {% include 'blocks/block-main-bottom.twig' %}
{% endblock %}
